apiVersion: apps/v1
kind: Deployment
metadata:
  name: cloud-trace-demo-b
  labels:
    app: cloud-trace-demo-app-b
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cloud-trace-demo-app-b
  template:
    metadata:
      name: cloud-trace-demo-b
      labels:
        app: cloud-trace-demo-app-b
    spec:
      containers:
      - name: cloud-trace-demo-container
        image: gcr.io/cloud-trace-demo/demo-image:latest
        command:
        - python
        args:
        - app.py
        - --keyword=world
        - --endpoint=http://{{ endpoint }}
        ports:
        - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: cloud-trace-demo-b
spec:
  selector:
    app: cloud-trace-demo-app-b
  ports:
  - protocol: TCP
    port: 80
    targetPort: 8080
  type: LoadBalancer
